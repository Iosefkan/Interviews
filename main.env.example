# Docker Environment Variables for HR System

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Docker)
MONGODB_URI=mongodb://hr-mongodb:27017/hr_system

# Redis Configuration (Docker)
REDIS_URL=redis://hr-redis:6379

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Service URLs (Docker)
TTS_SERVICE_URL=http://hr-tts:8001
STT_SERVICE_URL=http://hr-stt:8002

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MongoDB Credentials (optional for Docker)
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=